<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>List view</title>
</head>
<body>
  <% if (type === 'Event') { %>
  	<h2>Events</h2>
    <p>A total of <%= items.length %> events</p>
  <% } %>
  <% if (type === 'Checkpoint') { %>
    <h2>Checkpoints</h2>
    <p>A total of <%= items.length %> checkpoints</p>
  <% } %>
  <% if (type === 'User') { %>
    <h2>Users</h2>
    <p>A total of <%= items.length %> users</p>
  <% } %>
	<% if (items.length) { %>
    <ul>
      <% items.forEach(function(item){ %>
        <li><a href="<%= item._id %>/">
          <% if (type === 'User') { %>
            <%= item.displayName %></a>
          <% } %>
          <% if (type !== 'User') { %>
            <%= item.title %></a>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <ul>
    <li><a href="./create">Add</a></li>
    <li><a href="../">Go back</a></li>
  </ul>
</body>
</html