<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Show view</title>
  <style>
    .form-button-area { text-align: right; width: 400px; }
  </style>
</head>
<body>

	<h2>Details for: <%= type %></h2>

  <div class="form-button-area">
    <button id="edit-button" type="button" onClick="window.location='./edit'">Edit</button>
    <button id="cancel-button" type="button" onClick="window.location='../'">Cancel</button>
  </div>

	<% if (items && items.length) { %>
      <ul>
          <% items.forEach(function(item){ %>
            <li><label><%= item.key %>: </label><span><%= item.value %></span></li>
          <% }) %>
      </ul>
  <% } %>

  <% if (type === 'Event') { %>
    <ul>
      <li><a href="checkpoints/">Checkpoints</a></li>
      <li><a href="enrollments/">Enrollments</a></li>
    </ul>
  <% } %>

  <% if (type === 'Checkpoint') { %>
    <ul>
      <li><a href="tasks/">Tasks</a></li>
      <li><a href="checkins/">Check-ins</a></li>
    </ul>
  <% } %>

  <% if (type === 'User') { %>
    <ul>
      <li><a href="enrollments/">Enrollments</a></li>
    </ul>
  <% } %>

</body>
</html