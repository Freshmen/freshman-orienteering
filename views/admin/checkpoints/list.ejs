<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>List view</title>
</head>
<body>
  <h2>Checkpoints</h2>
  <p>A total of <%= items.length %> checkpoints</p>
	<% if (items.length) { %>
    <ul>
      <% items.forEach(function(item){ %>
        <li><a href="<%= item._id %>/">
          <% if (type === 'User') { %>
            <%= item.name %></a>
          <% } %>
          <% if (type === 'Event' || type === 'Checkpoint') { %>
            <%= item.title %></a>
          <% } %>
          <% if (type === 'Enrollment') { %>
            <%= item.user %> | <%= item.event %></a>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <ul>
    <li><a href="./create">Add</a></li>
    <li><a href="../">Go back</a></li>
  </ul>
</body>
</html