<!DOCTYPE html>
<html>
<head lang="en">
	<meta charset="utf-8" />
	<title>Admin view with Backbone.js</title>
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/css/bootstrap.min.css" />
</head>
<body>
	<div class="container">
		<div class="navbar navbar-static-top">
			<div class="navbar-inner">
				<ul class="nav">
					<a class="brand" href="/admin/">Admin Console</a>
					<li id="top-nav-events" <% if (topnav == "events") {%>class="active"<% } %>>
						<a href="/admin/events/">Events</a>
					</li>
					<li id="top-nav-users" <% if (topnav == "users") {%>class="active"<% } %>>
						<a href="/admin/users/">Users</a>
					</li>
					<li id="top-nav-users" <% if (topnav == "tickets") {%>class="active"<% } %>>
						<a href="/admin/tickets/">Tickets</a>
					</li>
				</ul>
				<ul class="nav pull-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<% if(user && user.name) { %>
								<%= user.name %>
							<% } else { %>
								Account
							<% } %>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href="/logout">Logout</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
		<br />
		<ul class="breadcrumb">
			<% breadcrumbs.forEach(function(crumb){ %>
				<% if (crumb.active) { %>
					<li class="active"><%= crumb.text %></li>
				<% } else { %>
					<li><a href="<%= crumb.link %>"><%= crumb.text %></a> <span class="divider">/</span></li>
				<% } %>
			<% }) %>
		</ul>
		<div class="page">