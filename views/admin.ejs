								<%= user.name %>
							<% } else { %>
								Account
							<% } %>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href="/logout">Logout</a></li>
						</ul>
					</li>
				</ul>
			</div>
