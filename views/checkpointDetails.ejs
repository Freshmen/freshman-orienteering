<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<script data-main="/javascripts/can.helper.min.js" src="/dependencies/libs/require-jquery.js"></script>
<title></title>
</head>
<body>
	<h1>Checkpoint: <%= checkpoint.title %></h1>
	<h2>Task description:</h2>
	<p><%= checkpoint.task.description %></p>
	<a href="<%= checkpoint.task.url %>">View task</a>
	<!-- <button type="button">Upload</button> -->
	<input type="file" <% if checkpoint.task.accepts != 'any/*'{%> accepts="<%= checkpoint.task.url %>" <%} %> />
	<p>Upload token: <%= ticket %></p>
	<p><a href="/events/<%= evt._id %>/checkpoints">&lt; Back</a></p>
	<script type="text/javascript">
		var input = document.querySelector('input[type=file]');
		input.onchange = function () {
  			var file = input.files[0];
  			console.log(file.name);
  			var path = "devices/Web/<%= evt.title>/<%= checkpoint.title>/Submissions/" + file.name;
  			var uploadTicket = <%= ticket>
  			uploadFile(uploadTicket,path,file);
  		}
	</script>
</body>
</html>