<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Show view</title>
</head>
<body>
  <% if (type == 'Events') { %>
    <h2>Create a new event</h2>
    <ul>
      <li><label >Title</label><input type="text" /></li>
      <li><label >Description</label><input type="text" /></li>
      <li><label >Start Time</label><input type="text" /></li>
      <li><label >End Time</label><input type="text" /></li>
      <li><label >Longitude</label><input type="text" /></li>
      <li><label >Latitude</label><input type="text" /></li>
      <li><label >Altitude</label><input type="text" /></li>
    </ul>
  <% } %>

  <% if (type == 'Event') { %>
      <h2>Create a new checkpoint</h2>
      <ul>
      <li><label >Title</label><input type="text" /></li>
      <li><label >Description</label><input type="text" /></li>
      <li><label >Order</label><input type="text" /></li>
      <li><label >Longitude</label><input type="text" /></li>
      <li><label >Latitude</label><input type="text" /></li>
      <li><label >Altitude</label><input type="text" /></li>
    </ul>
  <% } %>

  <ul>
    <li><a href="#">Save</a></li>
    <li><a href="./">Cancel</a></li>
  </ul>

  <script src="/javascripts/events.js"></script>
</body>
</html