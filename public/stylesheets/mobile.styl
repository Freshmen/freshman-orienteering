	text-align: center;
}

#header header:before,#header header:after{
	display:table;
	content:"";
	line-height:0
}

#header header:after{
	clear:both
}

#header{
  	position:fixed;
  	top:0;
  	left:0;
  	z-index:100;
  	width:100%;
  	padding-right: 10px;
  	padding-left: 10px;
  	-webkit-box-sizing:border-box;
  	-moz-box-sizing:border-box;
  	box-sizing:border-box
}

#header header{
  	position:relative;
 	margin-right:auto;
 	margin-left:auto;
  	min-height: navBarHeight;
  	background:navBackgroundColor;
  	*zoom:1;
  	-webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  	-moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  	box-shadow:0 1px 3px rgba(0,0,0,.15)
}

#header header h1{
  	display:block;
  	float:left;
  	width:150px;
  	margin:0;
  	min-height: navBarHeight;
  	border-right:1px solid #f4f4f4;
  	font-size:fontBig;
  	line-height:navBarHeight;
  	text-align:center;
  	letter-spacing:0
}


#header header #control:before, #header header #control:after {
  display:table;
  content:"";
  line-height:0
}

#header header #control:after{
  clear:both
}

#header header #control{
  position:absolute;
  top:0px;
  right:headerRightPosition;
  font-size:fontNav;
}

#contentNav ul:before, #contentNav ul::after {
  display:table;
  content:"";
  line-height:0
}

#contentNav ul:after{
clear:both
}

#contentNav ul li{
  line-height: listBarHeight;
}

#contentNav a{
  linkHover
  text-decoration:none;
  
}

#contentNav h2{
  padding-top: 5px;
}

#contentNav .listSmall{
