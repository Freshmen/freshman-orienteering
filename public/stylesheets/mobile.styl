/* Font definitions */
fontFamily="AvantGardeGothicITCW01B 731063","Helvetica Neue",Arial,sans-serif
fontBig=18px
fontNav=14px
fontSmall = 13px;

/* global colors */
siteBackgroundColor = #eee
navBackgroundColor = #fff

navFontStaticColor= #333
navFontHoverColor= #44e

/*Global measures */
mobileScalingMedium = 0.8;
mobileScaling = 0.7;

navBarHeight = 50px;
listBarHeight = 30px;
listBarSmallHeight = 20px;
eventTopPosition = 10px;
headerRightPosition = 20px;

/* Style functions, not working, seems handy */
linkHover()
  text-decoration:none;
  -webkit-transition:all .2s ease-in
  -moz-transition:all .2s ease-in
  -o-transition:all .2s ease-in
  transition:all .2s ease-in

/*Good demo about -webkit-font-smothing
http://maxvoltar.com/sandbox/fontsmoothing/
*/


html{
	margin: 0;
	padding: 0;
	height: 100%;
	-webkit-font-smoothing:antialiased;
}

body{
	margin: 0;
	padding: 0;
	height: 100%;
	color: #424242;
	background-color: siteBackgroundColor;
	font-family:fontFamily;
}

a{
	color:navFontStaticColor;
	text-decoration:none;
}

a:hover{
	/*color:navFontHoverColor;*/
	background:#EEE;
	text-decoration:none;
}

