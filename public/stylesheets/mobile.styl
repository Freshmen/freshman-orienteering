ul{
  	list-style:none;
}

#mapArea{
  height: 100%;
  margin: 0 auto;
  z-index: 1;
}

h1, h2, h3 {
  margin:0;
  font-weight:500;
  color:#003;
  text-rendering:optimizelegibility
}

