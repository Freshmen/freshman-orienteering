/* http://paulirish.com/2012/box-sizing-border-box-ftw/ */


#contentWrap, #taskWrap{
  position:fixed;
  top: navBarHeight+10;
  left:0;
  z-index:100;
  width:100%;
  padding-right: 10px;
  padding-left: 10px;
  box-sizing:border-box;
}

#content {
	  height: 600px - eventTopPosition;
	  overflow: auto;
	  position: relative;
	  margin-right:auto;
	  margin-left:auto;
	  *zoom:1;
	  overflow:auto;
	  top: eventTopPosition;
}

.listbox{
  	background:navBackgroundColor;
  	*zoom:1;
  	-webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
	-moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
	box-shadow:0 1px 3px rgba(0,0,0,.15);
}

#taskWrap{
  	padding-right: 10px;
  	padding-left: 10px;
  	z-index:99;
}

#taskContent{
