/* http://paulirish.com/2012/box-sizing-border-box-ftw/ */


#contentWrap, #taskWrap{
  position:fixed;
  top: navBarHeight+10;
  left:0;
  z-index:100;
  width:100%;
  padding-right: 10px;
  padding-left: 10px;
  box-sizing:border-box;
}

#content {
	  height: 600px - eventTopPosition;
	  overflow: auto;
	  position: relative;
	  margin-right:auto;
	  margin-left:auto;
	  *zoom:1;
	  overflow:auto;
	  top: eventTopPosition;
}

.listbox{
  	background:navBackgroundColor;
  	*zoom:1;
  	-webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
	-moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
	box-shadow:0 1px 3px rgba(0,0,0,.15);
}

#taskWrap{
  	padding-right: 10px;
  	padding-left: 10px;
  	z-index:99;
}

#taskContent{
  	margin-right: auto;
	width:300px; 
	text-align: center;
}

#header header:before,#header header:after{
	display:table;
	content:"";
	line-height:0
}

#header header:after{
	clear:both
}

#header{
  	position:fixed;
  	top:0;
  	left:0;
  	z-index:100;
  	width:100%;
  	padding-right: 10px;
  	padding-left: 10px;
  	-webkit-box-sizing:border-box;
  	-moz-box-sizing:border-box;
  	box-sizing:border-box
}

#header header{
  	position:relative;
 	margin-right:auto;
 	margin-left:auto;
  	min-height: navBarHeight;
  	background:navBackgroundColor;
  	*zoom:1;
  	-webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  	-moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  	box-shadow:0 1px 3px rgba(0,0,0,.15)
}

#header header h1{
  	display:block;
  	float:left;
  	width:150px;
  	margin:0;
  	min-height: navBarHeight;
  	border-right:1px solid #f4f4f4;
  	font-size:fontBig;
  	line-height:navBarHeight;
  	text-align:center;
  	letter-spacing:0
}


#header header #control:before, #header header #control:after {
  display:table;
  content:"";
  line-height:0
}

#header header #control:after{
  clear:both
}

#header header #control{
  position:absolute;
  top:0px;
  right:headerRightPosition;
  font-size:fontNav;
}

#contentNav ul:before, #contentNav ul::after {
  display:table;
  content:"";
  line-height:0
}

#contentNav ul:after{
clear:both
}

#contentNav ul li{
  line-height: listBarHeight;
}

#contentNav a{
  linkHover
  text-decoration:none;
  
}

#contentNav h2{
  padding-top: 5px;
}

#contentNav .listSmall{
  font-size: fontSmall;
  line-height: listBarSmallHeight;
  margin-left 20px;
}

#control ul{
  margin:0;
  padding:0 0 0 9px;
  line-height:navBarHeight;
  *zoom:1;
}

#control ul li{
  height:navBarHeight;
  display:block;
  float:left;
  margin:0 0 0 10px
}

#control ul li a{
  linkHover
  text-decoration:none;
} 

#footer footer #control{
  position:absolute;
  bottom:0px;
  right:headerRightPosition;
  margin: 0, auto;
  font-size:fontNav+3;
}

#footer{
  position:fixed;
  bottom:0;
  left:0;
  z-index:100;
  width:100%;
  padding-left:10px;
  padding-right:10px;
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  box-sizing:border-box
}

#footer footer{
  position:relative;
  margin-right:auto;
  margin-left:auto;
  *zoom:1;
  min-height: navBarHeight;
  background:navBackgroundColor;
  -webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  -moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  box-shadow:0 2px 4px rgba(0,0,0,.15)
}

#footer footer h1{
  display:block;
  border-right:1px solid #f4f4f4;
  float:left;
  width:100px;
  margin:0;
  font-size:fontBig;
  line-height:navBarHeight;
  text-align:center;
  letter-spacing:0
}

span.delete {
	position:relative;
	padding: 2px;
	float:right;
	margin-top: 3px;
	margin-right: 3px;
	border-radius: 2px;
	border-top-left-radius: 2px;
	border-top-right-radius: 2px;
	border-bottom-right-radius: 2px;
	border-bottom-left-radius: 2px;
}
span.expand {
	margin-top: 0px;
}
span.delete:hover{
	color: #ffffff;
	background: #000;
}
.thumb {
    height: 75px;
    border: 1px solid #000;
    margin: 10px 5px 0 0;
  }

@media (max-width: 400px) {
    #header header {
      min-height:navBarHeight*mobileScaling;
    }
     #header header h1 { 
      font-size:fontBig*mobileScaling;
      line-height:navBarHeight*mobileScaling; 
      min-height: navBarHeight*mobileScaling;
      width:150px*mobileScaling; /* this will twist F-Orienteering is position to left*/
    }

    #header header #control { 
      font-size:fontNav*mobileScaling; 
      line-height:navBarHeight*mobileScaling; 
      min-height: navBarHeight*mobileScaling;
      right: headerRightPosition*mobileScaling*mobileScaling;
    }

    #control ul{
      line-height:navBarHeight*mobileScaling; 
    }

    #control ul li{
      line-height:navBarHeight*mobileScaling;
      height:navBarHeight*mobileScaling;
    }

    #footer footer{
      min-height:navBarHeight*mobileScaling;  
    }

    #footer footer h1{
      min-height:navBarHeight*mobileScaling; 
    }

    #footer footer #control {
      line-height:navBarHeight*mobileScaling; 
      font-size:(fontNav+3)*mobileScaling;
      right:headerRightPosition*mobileScaling*mobileScaling;
    }

    #contentWrap{
      top: navBarHeight*mobileScaling+10;
    }

    #content{
      height: 400px - eventTopPosition;
      top:eventTopPosition;
    }

    #contentNav ul li{
      font-size:fontNav*mobileScaling; 
      line-height: listBarHeight*mobileScaling;
    }

    .contentList {
      padding-right: 20px*mobileScaling;
      padding-left: 20px*mobileScaling;

    }

    #contentNav .listSmall{
      font-size: fontSmall*mobileScaling;
      line-height: listBarSmallHeight*mobileScaling;
      margin-left 20px*mobileScaling;
  	}
	
	#contentWrap, #taskWrap{
		top: ( navBarHeight ) * mobileScaling;
	}
	
    #taskWrap{
      top: navBarHeight*mobileScaling+10;
    }

    #taskContent{   
      font-size: fontSmall*mobileScaling;
      margin-left: 0px;
      margin-right: auto;
      width:400px*0.5;
      text-align: center;
    }
    
    a.tagbtn3 {
		font-size: 15px*mobileScaling;
		padding: 5px*mobileScaling;
	}
}

@media (min-width: 400px) and (max-width: 600px) {
    #header header {
      min-height:navBarHeight*mobileScalingMedium;
    }
     #header header h1 { 
      font-size:fontBig*mobileScaling;
      line-height:navBarHeight*mobileScalingMedium; 
      min-height: navBarHeight*mobileScalingMedium;
    }

    #header header #control { 
      font-size:fontNav*mobileScalingMedium; 
      line-height:navBarHeight*mobileScalingMedium; 
      min-height: navBarHeight*mobileScalingMedium;
    }

    #control ul{
      line-height:navBarHeight*mobileScalingMedium; 
    }

    #control ul li{
      line-height:navBarHeight*mobileScalingMedium;
      height:navBarHeight*mobileScalingMedium;
    }

    #footer footer{
      min-height:navBarHeight*mobileScalingMedium;  
    }

    #footer footer h1{
      min-height:navBarHeight*mobileScalingMedium; 
    }

    #footer footer #control {
      line-height:navBarHeight*mobileScalingMedium; 
      font-size:(fontNav+3)*mobileScalingMedium;
    }

    #contentWrap{
      top: navBarHeight*mobileScaling+10;
    }

    #content{
      height: 500px;
      /*min-width: 250px*mobileScalingMedium;
      /*
      width:95.8%;
      height: 84%;
      */
    }

    #contentNav ul li{
      font-size:fontNav*mobileScalingMedium; 
      line-height: listBarHeight*mobileScalingMedium;
    }

    .contentList {
      padding-right: 20px*mobileScalingMedium;
      padding-left: 20px*mobileScalingMedium;

    }

    #contentNav .listSmall{
      font-size: fontSmall*mobileScalingMedium;
      line-height: listBarSmallHeight*mobileScalingMedium;
      margin-left 20px*mobileScalingMedium;
  }

    #taskWrap{
      top: navBarHeight*mobileScalingMedium+10;
    }

    #taskContent{ 
      font-size: fontSmall*mobileScalingMedium;
      margin-left: 0px;
      margin-right: auto;
      width:400px*0.5;
      text-align: center;
    }
}
