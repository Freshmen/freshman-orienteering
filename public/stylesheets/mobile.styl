#header{
  position:fixed;
  top:0;
  left:0;
  z-index:100;
  width:100%;
  padding-right: 10px;
  padding-left: 10px;
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  box-sizing:border-box
}

#header header{
  position:relative;
  margin-right:auto;
  margin-left:auto;
  min-height: navBarHeight;
  background:navBackgroundColor;
  *zoom:1;
  -webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  -moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  box-shadow:0 1px 3px rgba(0,0,0,.15)
}

#header header h1{
  display:block;
  float:left;
  width:150px;
  margin:0;
  min-height: navBarHeight;
  border-right:1px solid #f4f4f4;
  font-size:fontBig;
  line-height:navBarHeight;
  text-align:center;
  letter-spacing:0
}


#header header #control{
  position:absolute;
  top:0px;
  right:20px;
  font-size:fontNav;
}


#contentNav ul li{
  line-height: listBarHeight;
}

#contentNav a{
  linkHover
  text-decoration:none;
  
}

#contentNav .listSmall{
  font-size: fontSmall;
  line-height: listBarSmallHeight;
  margin-left 20px;
}

#control ul{
  margin:0;
  padding:0 0 0 9px;
  line-height:navBarHeight;
  *zoom:1;
}

#control ul li{
  height:navBarHeight;
  display:block;
  float:left;
  margin:0 0 0 10px
}

#control ul li a{
  linkHover
  text-decoration:none;
} 

#footer footer #control{
  position:absolute;
  bottom:0px;
  right:20px;
  margin: 0, auto;
  font-size:fontNav+3;
}

#footer{
  position:fixed;
  bottom:0;
  left:0;
  z-index:100;
  width:100%;
  padding-left:10px;
  padding-right:10px;
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  box-sizing:border-box
}

#footer footer{
  position:relative;
  margin-right:auto;
  margin-left:auto;
  *zoom:1;
  min-height: navBarHeight;
  background:navBackgroundColor;
  -webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  -moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  box-shadow:0 2px 4px rgba(0,0,0,.15)
}

#footer footer h1{
  display:block;
  border-right:1px solid #f4f4f4;
  float:left;
  width:100px;
  margin:0;
  font-size:fontBig;
  line-height:navBarHeight;
  text-align:center;
  letter-spacing:0
}

@media (max-width: 400px) {
    #header header {
      min-height:navBarHeight*mobileScaling;
    }
     #header header h1 { 
      font-size:fontBig*mobileScaling;
      line-height:navBarHeight*mobileScaling; 
      min-height: navBarHeight*mobileScaling;
    }

    #header header #control { 
      font-size:fontNav*mobileScaling; 
      line-height:navBarHeight*mobileScaling; 
      min-height: navBarHeight*mobileScaling;
    }

    #control ul{
      line-height:navBarHeight*mobileScaling; 
    }

    #control ul li{
      line-height:navBarHeight*mobileScaling;
      height:navBarHeight*mobileScaling;
    }

    #footer footer{
      min-height:navBarHeight*mobileScaling;  
    }

    #footer footer h1{
      min-height:navBarHeight*mobileScaling; 
    }

    #footer footer #control {
      line-height:navBarHeight*mobileScaling; 
      font-size:(fontNav+3)*mobileScaling;
    }

    #contentWrap{
      position: fixed;
      top: navBarHeight*mobileScaling+10;
      
    }

    #content{
      min-width: 250px*mobileScaling;
      
    }


    #contentNav ul li{
      font-size:fontNav*mobileScaling; 
      line-height: listBarHeight*mobileScaling;
    }

    #contentList {
      padding-right: 20px*mobileScaling;
      padding-left: 20px*mobileScaling;

    }

    #contentNav .listSmall{
      font-size: fontSmall*mobileScaling;
      line-height: listBarSmallHeight*mobileScaling;
      margin-left 20px*mobileScaling;
  }

}
