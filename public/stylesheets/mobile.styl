	float:right;
	text-shadow: -1px -1px white, 1px 1px rgb(0, 153, 255);
	cursor: pointer;
}
.startEvent:after,.startingEvent:after {
	content: "";
}
.startEvent:before,.startingEvent:before {

}
.startingEvent,.startingNavigation {
color: #09f;
padding-right: 20px;
text-shadow: 0px 0px 4px #09f;
}
.startNavigation::after {
content: "e";
}
