/* http://paulirish.com/2012/box-sizing-border-box-ftw/ */




#contentWrap{
  position: fixed;
  top: navBarHeight+10;
  left:0;
  z-index:100;
  width: 100%;
  padding-right: 20px;
  padding-left: 20px;
}

#content{
  position: fixed;
  right:10px;
  min-width: 250px;
  margin-left: auto;
  margin-right: auto;
  background:navBackgroundColor;
  *zoom:1;
  -webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
  -moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
  box-shadow:0 1px 3px rgba(0,0,0,.15)
}


