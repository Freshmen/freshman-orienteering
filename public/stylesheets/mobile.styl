/* upper right corner, delete button */
span.delete {
	color: #09f;
	position:relative;
	padding: 2px;
	float:right;
	cursor: pointer;
	margin-top: 3px;
	margin-right: 3px;
	border-radius: 2px;
	border-top-left-radius: 2px;
	border-top-right-radius: 2px;
	border-bottom-right-radius: 2px;
	border-bottom-left-radius: 2px;
	z-index:100;
}
span.expand {
	margin-top: 0px;
}
span.delete:hover{
	background: #000;
	z-index:100;
}
/* upper right corner, refresh button */
#refresh {
  	position: relative;
  	float: right;
	width: 0;
	height: 0;
	cursor: pointer;
	border-top: 8px solid transparent;
	border-right: 8px solid rgb(0, 153, 255);
	-webkit-transform: rotate(0deg) translate(-29px, 7px) scale(0.7);
	-moz-transform: rotate(0deg) translate(-29px, 7px) scale(0.7);
	-ms-transform: rotate(0deg) translate(-29px, 7px) scale(0.7);
	-o-transform: rotate(0deg) translate(-29px, 7px) scale(0.7);
}
#refresh:after {
  	content: "";
	position: absolute;
	border: 3px solid transparent;
	border-top: 3px solid rgb(0, 153, 255);
	border-right: 3px solid rgb(0, 153, 255);
	border-left: 3px solid rgb(0, 153, 255);
	border-radius: 50px;
	top: -9px;
	left: -11px;
	width: 12px;
	height: 12px;
	-webkit-transform: rotate(-65deg);
	-moz-transform: rotate(-65deg);
	-ms-transform: rotate(-65deg);
	-o-transform: rotate(-65deg);
}

